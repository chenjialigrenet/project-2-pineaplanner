<div class='wrapper'>
  <h1>Log in</h1>
  <form method='POST' action='/login'>
    <div class='input'>
      <label for='email'>Email </label>
      <input
        id='email'
        type='email'
        name='email'
        placeholder='*****@gmail.com'
        value='alice@gmail.com'
        required
      />
    </div>
    <div class='input'>
      <label for='password'>Password </label>
      <input
        id='password'
        type='password'
        name='password'
        placeholder='••••••'
        value='1234'
        required
      />
    </div>
    <button type='submit'>Log In</button>
  </form>
  <p>Don't have an account yet ?
    <a href='/signup' class='btn-sign'>Sign Up</a></p>
</div>