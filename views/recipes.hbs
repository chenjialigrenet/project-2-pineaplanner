<div id="recipes-body-wrapper">



<div id="recipes-tags-wrapper">




<div class="dropdown">
<form id="filterTags" method="GET">
    <h2 class="drop-on-hover">Filter by Diet Type</h2>
    <div class="dropdown-content">
        <ul id="dishDietList">
            <li class="tag-list-item">
                <input name="typeVegan" value="vegan" id="input_dishVegan" type="checkbox"  />
                <label for="typeVegan">Vegan</label>
            </li>

            <li class="tag-list-item"></li>
                <input name="typeVegetarian" value="vegetarian" id="input_dishVegetarian" type="checkbox"/>
                <label for="typeVegetarian">Vegetarian</label>
            </li>

            <li class="tag-list-item"></li>
                <input name="dishDairyFree" value="dairyFree" id="input_dishDairyFree" type="checkbox"  />
                <label for="dishDairyFree">Dairy-Free</label>
            </li>

            <li class="tag-list-item "></li>
            <input name="dishGlutenFree" value="glutenFree" id="input_dishGlutenFree" type="checkbox"  />
            <label for="dishGlutenFree">Gluten-Free</label>
            </li>
        </ul>
    </div>
</div>
    


    <div class="dropdown">
<h2 class="drop-on-hover">Filter by Dish Type</h2>
    <div class="dropdown-content">
        <ul id="dishTypeList">
        {{#each dishTypes}}
            {{>dishTypeList this}}
        {{/each }}

        </ul>
</div>
</div>


</form>

</div>

<div id="recipes-recipe-right">

<h1>Recipes</h1>

<form id="searchBar" >
    <input id="searchText" type="text">
    <button id="searchButton" type="button">Search</button>
</form>

<div id="recipes-recipe-wrapper">
    
    {{#each recipes}}
        {{>recipeCard this}}
    {{/each }}
</div>
    
<div id="recipes-pageselector">
    <button id="prevPageButton"> ← </button>
    <span id="currentPage">1</span>
    <span> / </span>
    <span id="allPage">{{allPages}}</span>
    <button id="nextPageButton"> → </button>
</div>
</div>




<div id="modal-overlay" class="closed">
</div>

<div id="modal"class="closed" >
    <div id="modalWrapper">

        <div id="modalLeftSide">
            <img id="modalImage" src="https://spoonacular.com/recipeImages/646868-556x370.jpg" alt="image">
            <div id="modalTagsWrapper">

            </div>

            <ul id="ingredientList">
            </ul>
        </div>

        <div id="modalRightSide">
            <button id="close-modal">X</button>
            <h2 id="recipeTitle"></h2>
            <h3>Summary</h3>
            <p id="modalSummarry"></p>
            
            <p><em>Ready in : </em><strong><span id="readyInMin"></span> min</strong>, <em>Number of Servings : </em><strong><span id="servings">4</span> </strong></p>
            <h3>Instructions</h3>
            
            <p id="instructionsList"></p>

        </div>
    </div>


</div>






</div>
