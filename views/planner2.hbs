

<div id="planContainer">

<div id="planHeader">
<h3 id="titleLine"> 
    <span id="planTitle" contenteditable="true">My plan name</span>
    <img id="icon" src="/images/edit-regular.svg" alt="edit">
    </h3>
    
<div id="controlDiv">
    <span id="message"></span>
    <button id="buttonSave" disabled="true">Save</button>
    <button id="buttonCreate">Create new plan</button>
    <button id="buttonDelete">Delete plan</button>
    
    <select id="selectPlan" name="choosePlan">
        <option value="" disabled selected>Choose another plan</option>
        {{#each plans}}
        <option id="{{this._id}}">{{this.title}}</option>
        {{/each}}
    </select>
</div>

</div>

<div id="planGridWrapper">
    {{!-- Days --}}
    <div class="cell day">Meal</div>
    <div class="cell day">Monday</div>
    <div class="cell day">Tuesday</div>
    <div class="cell day">Wednesday</div>
    <div class="cell day">Thursday</div>
    <div class="cell day">Friday</div>
    <div class="cell day">Saturday</div>
    <div class="cell day">Sunday</div>
    {{!-- breakfasts --}}
    <div class="cell day">Breakfast</div>
    <div class="cell meal breakfast monday" ><button class="addButton">+</button></div>
    <div class="cell meal breakfast tuesday"><button class="addButton">+</button></div>
    <div class="cell meal breakfast wednesday"><button class="addButton">+</button></div>
    <div class="cell meal breakfast thursday"><button class="addButton">+</button></div>
    <div class="cell meal breakfast friday"><button class="addButton">+</button></div>
    <div class="cell meal breakfast saturday"><button class="addButton">+</button></div>
    <div class="cell meal breakfast sunday"><button class="addButton">+</button></div>
    {{!-- lunches --}}
    <div class="cell day">Lunch</div>
    <div class="cell meal lunch monday" ><button class="addButton">+</button></div>
    <div class="cell meal lunch tuesday"><button class="addButton">+</button></div>
    <div class="cell meal lunch wednesday"><button class="addButton">+</button></div>
    <div class="cell meal lunch thursday"><button class="addButton">+</button></div>
    <div class="cell meal lunch friday"><button class="addButton">+</button></div>
    <div class="cell meal lunch saturday"><button class="addButton">+</button></div>
    <div class="cell meal lunch sunday"><button class="addButton">+</button></div>
        {{!-- dinners --}}
    <div class="cell day">Dinner</div>
    <div class="cell meal dinner monday" ><button class="addButton">+</button></div>
    <div class="cell meal dinner tuesday"><button class="addButton">+</button></div>
    <div class="cell meal dinner wednesday"><button class="addButton">+</button></div>
    <div class="cell meal dinner thursday"><button class="addButton">+</button></div>
    <div class="cell meal dinner friday"><button class="addButton">+</button></div>
    <div class="cell meal dinner saturday"><button class="addButton">+</button></div>
    <div class="cell meal dinner sunday"><button class="addButton">+</button></div>   
</div>

</div>

<div id="modal-overlay-planner" class="closed" >
</div>

<div id="modal-planner" class="closed">
    <div id="modalWrapper">
        <button id="closeModalButton">X</button>
        <h3>Choose a recipe</h3>
        <div id="searchDiv">
            <div id="searchBarDiv">
                <label for="searchRecipe">Search:</label>
                <input id="searchInputModal" type="text" placeholder="Search...">

            </div>

        </div>

        <div id="listBoxContainer">
        <div id="modalPageContainer">
                <button id="prevPageButton"> ← </button>
                <span id="currentPage">1</span>
                <span> / </span>
                <span id="allPage"></span>
                <button id="nextPageButton"> → </button>
        </div>
            <ul id="recipeList">
                
            </ul>

        </div>
        <button id="addRecipeButton">Add recipe</button>
        </div>
    </div>
</div>
